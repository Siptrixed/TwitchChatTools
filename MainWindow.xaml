<Window x:Class="TwitchChatTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitchChatTools"
        xmlns:u="clr-namespace:TwitchChatTools.Utils"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        Padding="0"
        Title="TwitchChatTools" Height="300" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip" MinWidth="600" MinHeight="300" IsTabStop="False" StateChanged="OnWindowStateChanged" UseLayoutRounding="False">
    <Border BorderBrush="#FF4F4F4F" BorderThickness="1" CornerRadius="0" >
        <Grid Visibility="Visible">
            <TabControl x:Name="MainTabControl"  MouseDown="OnWindowClick" SelectedIndex="0" Margin="-1,-1,-1,-1">
                <TabItem Padding="6,2,6,2" >
                    <TabItem.Style>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <TextBlock Text="" Margin="0,0,5,0" Padding="5,0,5,0" Width="23" Height="18"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabItem.Style>
                    <Grid>
                        <Label Content="{Binding Source={x:Static u:Lang.Instance}, Path=[Welcome]}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    </Grid>
                </TabItem>
                <TabItem Header="{Binding Source={x:Static u:Lang.Instance}, Path=[Settings]}" Padding="5,0,5,0" Margin="-1,1,0,0">
                    <Frame x:Name="SettingsFrame" Source="/PageTabs/Settings.xaml"></Frame>
                </TabItem>
            </TabControl>
            <Grid x:Name="FullWindowBanner" Visibility="Visible" UseLayoutRounding="True" ScrollViewer.CanContentScroll="True">
                <Rectangle HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" Fill="{DynamicResource BackgroundColour}" Stroke="{DynamicResource BackgroundColour}"/>
                <ComboBox x:Name="LangSelect" HorizontalAlignment="Right" Margin="0,-1,39,0" Height="21" FontSize="11" Panel.ZIndex="999" VerticalAlignment="Top" Width="100" Grid.Column="0" SelectionChanged="LangSelect_SelectionChanged" SelectedValuePath="Key" DisplayMemberPath="Value"></ComboBox>
                <Grid x:Name="LoginGrid" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="{Binding Source={x:Static u:Lang.Instance}, Path=[OAuthCaption]}" HorizontalAlignment="Center" Margin="10,10,10,10" VerticalAlignment="Bottom" Padding="0,0,0,0" Height="16"/>
                    <Button Grid.Row="1" x:Name="LoginButton" Content="{Binding Source={x:Static u:Lang.Instance}, Path=[Login]}" HorizontalAlignment="Center" Margin="10,10,10,10" VerticalAlignment="Top" Padding="5,0,5,1" Click="OnLoginClick" Height="19" Grid.Column="1"/>
                </Grid>
                <Grid x:Name="ChannelToConnectSelector" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="{Binding Source={x:Static u:Lang.Instance}, Path=[SelectChannelCaption]}" HorizontalAlignment="Center" Margin="10,10,10,10" VerticalAlignment="Bottom" Padding="0,0,0,0" Height="16"/>
                    <TextBox Grid.Row="1" x:Name="ChannelToConnectUser" HorizontalAlignment="Center" Margin="10,10,120,10" VerticalAlignment="Top" Height="20" Width="200"/>
                    <Button Grid.Row="1" Content="{Binding Source={x:Static u:Lang.Instance}, Path=[Connect]}" HorizontalAlignment="Center" Margin="210,10,10,10" VerticalAlignment="Top" Padding="5,0,5,1" Click="OnChannelSelectClick" Height="20" Grid.Column="1" Width="100"/>
                </Grid>
                <Grid x:Name="UpdateGrid" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="{Binding Source={x:Static u:Lang.Instance}, Path=[NewVersionAvailable]}" HorizontalAlignment="Center" Margin="10,0,10,0" VerticalAlignment="Bottom" Padding="0,0,0,0" Height="16"/>
                    <Grid Grid.Row="1" VerticalAlignment="Center" Visibility="Visible">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="{Binding Source={x:Static u:Lang.Instance}, Path=[CurrentVersion]}" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Top" Padding="0,0,0,0" Height="16"/>
                        <Label Grid.Column="0" Content="{Binding Source={x:Static u:Lang.Instance}, Path=[NewVersion]}" HorizontalAlignment="Left" Margin="10,30,10,10" VerticalAlignment="Top" Padding="0,0,0,0" Height="16"/>
                        <Label x:Name="CurrentVersionLabel" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Top" Padding="0,0,0,0" Height="16"/>
                        <Label x:Name="NewVersionLabel" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="10,30,10,10" VerticalAlignment="Top" Padding="0,0,0,0" Height="16"/>
                        <Label Grid.Row="0" Content="{Binding Source={x:Static u:Lang.Instance}, Path=[WhatsNew]}" HorizontalAlignment="Left" Margin="10,50,10,10" VerticalAlignment="Top" Padding="0,0,0,0" Height="16"/>
                        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,50,10,10" VerticalAlignment="Top" Padding="0,0,0,0" Height="16">
                            <Hyperlink NavigateUri="https://github.com/Siptrixed/TwitchChatTools/releases" RequestNavigate="Hyperlink_RequestNavigate">
                                GitHub Releases
                            </Hyperlink>
                        </TextBlock>
                    </Grid>
                    <Grid Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" x:Name="UpdateLaterButton" Content="{Binding Source={x:Static u:Lang.Instance}, Path=[UpdateLater]}" HorizontalAlignment="Right" Margin="10,10,10,10" VerticalAlignment="Top" Padding="5,0,5,1" Click="UpdateLaterButton_Click" Height="19"/>
                        <Button Grid.Column="1" x:Name="UpdateNowButton" Content="{Binding Source={x:Static u:Lang.Instance}, Path=[UpdateNow]}" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Top" Padding="5,0,5,1" Height="19" Click="UpdateNowButton_Click" />
                    </Grid>
                </Grid>
                <Grid x:Name="PleaseWaitGrid" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <ProgressBar x:Name="HeaderProgressBar" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="21" IsIndeterminate="True" Margin="25,-1,138,0" />
                    <Label x:Name="WaitLabel" Content="{Binding Source={x:Static u:Lang.Instance}, Path=[Loading]}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Grid>
                <Rectangle VerticalAlignment="Top" Height="21" Stroke="#FF4F4F4F" Margin="-1,-1,-1,0" MouseDown="OnWindowClick" Fill="#19191919"/>
            </Grid>
            <Rectangle VerticalAlignment="Stretch" Stroke="#FF4F4F4F" Margin="-1,-1,0,-1" MouseDown="OnWindowClick" Fill="#19191919" Width="1" HorizontalAlignment="Left"/>
            <Rectangle VerticalAlignment="Stretch" Stroke="#FF4F4F4F" Margin="-1,-1,-1,-1" MouseDown="OnWindowClick" Fill="#19191919" Width="1" HorizontalAlignment="Right"/>
            <Rectangle VerticalAlignment="Top" Height="1" Stroke="#FF4F4F4F" Margin="-1,-1,0,0" MouseDown="OnWindowClick" Fill="#19191919"/>
            <Rectangle VerticalAlignment="Bottom" Height="1" Stroke="#FF4F4F4F" Margin="-1,-1,-1,-1" MouseDown="OnWindowClick" Fill="#19191919"/>
            <Rectangle VerticalAlignment="Top" Height="21" Stroke="#FF4F4F4F" Margin="-1,-1,0,0" MouseDown="OnWindowClick" Width="27" HorizontalAlignment="Left" Fill="#FF191919"/>
            <Image x:Name="LogoImage" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Height="15" Margin="5,2,0,0" Source="/TwitchChatTools;component/Icon.ico" FlowDirection="LeftToRight" ScrollViewer.VerticalScrollBarVisibility="Disabled" MouseDown="OnWindowClick" UseLayoutRounding="False" />
            <Button HorizontalAlignment="Right" VerticalAlignment="Top" Content="X" Height="21" Width="21" Click="OnCloseClick" Margin="0,-1,-1,0"/>
            <Button HorizontalAlignment="Right" VerticalAlignment="Top" Content="_" Height="21" Width="21" Margin="0,-1,19,0" Click="OnMinimizeClick"/>

        </Grid>
    </Border>
</Window>
